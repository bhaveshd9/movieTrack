<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="1dp"
    android:paddingTop="16dp"
    tools:context=".MainActivity"
    android:background="#2B2929"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:fontFamily="@font/notosansextrabold"
        android:gravity="center"
        android:padding="10dp"
        android:shadowColor="#000"
        android:shadowDx="5"
        android:shadowDy="5"

        android:shadowRadius="7"
        android:text="@string/app_name"
        android:textColor="#fff"
        android:textSize="45sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="24dp" />

    <EditText
        android:id="@+id/editTextFirstName"
        android:layout_width="277dp"
        android:layout_height="wrap_content"
        android:background="@drawable/roundtextedit"
        android:ems="10"
        android:fontFamily="@font/notosansregular"
        android:inputType="textPersonName"
        android:padding="5dip"
        android:textSize="22sp"
        android:textColorHint="#000"
        android:elevation="10dp"

        android:hint="First Name"

        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="24dp" />

    <EditText
        android:id="@+id/editTextLastName"
        android:layout_width="277dp"
        android:layout_height="wrap_content"
        android:background="@drawable/roundtextedit"
        android:ems="10"
        android:fontFamily="@font/notosansregular"
        android:inputType="textPersonName"
        android:padding="5dip"
        android:textSize="22sp"
        android:textColorHint="#000"
        android:elevation="10dp"

        android:hint="Last Name"

        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="24dp" />

    <EditText
        android:id="@+id/editTextUsername"
        android:layout_width="277dp"
        android:layout_height="wrap_content"
        android:background="@drawable/roundtextedit"
        android:ems="10"
        android:fontFamily="@font/notosansregular"
        android:inputType="textPersonName"
        android:padding="5dip"
        android:textSize="22sp"
        android:textColorHint="#000"
        android:elevation="10dp"

        android:hint="Username"

        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="24dp" />

    <EditText
        android:id="@+id/editTextCreatePassword"
        android:layout_width="277dp"
        android:layout_height="wrap_content"
        android:background="@drawable/roundtextedit"
        android:hint="Password"
        android:padding="5dip"
        android:textColorHint="#000000"
        android:fontFamily="@font/notosansregular"
        android:ems="10"
        android:inputType="textPassword"
        android:elevation="10dp"
        android:textSize="22sp"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="24dp" />

    <EditText
        android:id="@+id/editTextPasswordConfirm"
        android:layout_width="277dp"
        android:layout_height="wrap_content"
        android:background="@drawable/roundtextedit"
        android:hint="Confirm Password"
        android:padding="5dip"
        android:textColorHint="#000000"
        android:fontFamily="@font/notosansregular"
        android:ems="10"
        android:inputType="textPassword"
        android:elevation="10dp"
        android:textSize="22sp"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="24dp" />

    <TextView
        android:id="@+id/textViewFeedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosansextrabold"
        android:gravity="center"
        android:padding="10dp"
        android:shadowColor="#000"
        android:shadowDx="5"
        android:shadowDy="5"

        android:shadowRadius="7"
        android:text=""
        android:textColor="#EF0606"
        android:textSize="12sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="24dp" />

    <Button
        android:id="@+id/CreateAccountButton"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonbackground"
        android:elevation="10dp"
        android:fontFamily="@font/notosansregular"
        android:gravity="center"
        android:padding="2dip"
        android:text="Create Account"

        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="24sp"


        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="24dp" />

    <Button
        android:id="@+id/ReturnToLoginButton"
        android:layout_width="244dp"
        android:layout_height="wrap_content"
        android:background="#002C2725"
        android:elevation="10dp"
        android:fontFamily="@font/notosansregular"
        android:gravity="center"
        android:padding="2dip"
        android:text="Return to Login"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="24sp"


        />

</LinearLayout>